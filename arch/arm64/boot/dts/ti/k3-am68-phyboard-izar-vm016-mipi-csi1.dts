/dts-v1/;
/plugin/;

#include <dt-bindings/gpio/gpio.h>

&{/} {
	clk_cam_csi1: clk-cam-csi1 {
		compatible = "fixed-clock";
		#clock-cells = <0>;
		clock-frequency = <27000000>;
	};
};

&main_i2c5 {
	clock-frequency = <400000>;
	#address-cells = <1>;
	#size-cells = <0>;
	status = "okay";

	vm016_csi1: vm016-csi1@10 {
		compatible = "onsemi,ar0144";
		reg = <0x10>;

		clock-names = "ext";
		clocks = <&clk_cam_csi1>;

		port {
			vm016_csi1_ep: endpoint {
				remote-endpoint = <&csi2rx1_in_sensor>;
				data-lanes = <1 2>;
				clock-lanes = <0>;
				clock-noncontinuous = <1>;
				bus-type = <4>; /* MIPI_CSI2_DPHY */
				link-frequencies = /bits/ 64 <222750000>;
			};
		};
	};
};

&cdns_csi2rx1 {
	status = "okay";
};

&csi1_port0 {
	status = "okay";

	csi2rx1_in_sensor: endpoint {
		remote-endpoint = <&vm016_csi1_ep>;
		bus-type = <4>; /* CSI2 DPHY. */
		clock-lanes = <0>;
		data-lanes = <1 2>;
	};
};
